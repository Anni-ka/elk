<project name="Eclipse Layout Kernel" default="publish" basedir=".">

    <!-- ================================================================= -->
    <!-- P R O P E R T I E S                                               -->
    <!-- ================================================================= -->
    <property name="sourceDir" value="target/repository/" />
    <property name="targetZipFile" value="elk-nightly.zip" />
    <!-- The targetDir property must be set externally. -->


    <!-- ================================================================= -->
    <!-- C O P Y                                                           -->
    <!-- ================================================================= -->
    <target name="copy"
            description="Copies a built update site to its download location.">

        <!-- Produce a zip archive of the update site -->
        <zip zipfile="${sourceDir}/${targetZipFile}"
             update="false">

            <zipfileset dir="${sourceDir}" />
        </zip>

        <!-- Empty the target directory -->
        <delete dir="${targetDir}" />
        <mkdir dir="${targetDir}" />

        <!-- Copy to target directory -->
        <copy todir="${targetDir}">
            <fileset dir="${sourceDir}" />
        </copy>

    </target>

</project>
